<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.bantuan.BantuanFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/atas"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@color/cp_1"
            app:circularflow_radiusInDP="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:alpha="0.4"
                android:contentDescription="@string/set_bantuan"
                android:src="@drawable/help_desk"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.909"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.106" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Halo,"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppinsbold"
                android:text="User"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/es_bantuan_atas"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/es_bantuan_atas_2"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bawah"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/kotak_rounded_bawah"
            app:circularflow_radiusInDP="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atas">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/topik_bantuan"
                android:textColor="@color/cp_1"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/b_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tv_bantuan_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/topik_bantuan_1"
                    android:textColor="@color/cp_1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_bantuan_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/round_keyboard_arrow_right_24"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/bantuan_1_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/b_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/b_1"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tv_bantuan_2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/topik_bantuan_1"
                    android:textColor="@color/cp_1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_bantuan_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/round_keyboard_arrow_right_24"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/bantuan_1_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/b_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/b_2"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tv_bantuan_3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/topik_bantuan_1"
                    android:textColor="@color/cp_1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_bantuan_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/round_keyboard_arrow_right_24"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/bantuan_1_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/b_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/b_3"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tv_bantuan_4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/topik_bantuan_1"
                    android:textColor="@color/cp_1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_bantuan_4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/round_keyboard_arrow_right_24"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/bantuan_1_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/b_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/b_4"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tv_bantuan_5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/topik_bantuan_1"
                    android:textColor="@color/cp_1"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_bantuan_5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/round_keyboard_arrow_right_24"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/bantuan_1_img" />
            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>